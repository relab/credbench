{
    "config": {
        "chainId": {{ .ChainID }},
        "homesteadBlock": 0,
        "eip150Block": 0,
        "eip155Block": 0,
        "eip158Block": 0,
        "byzantiumBlock": 0,
        "constantinopleBlock": 0,
        "petersburgBlock": 0,
        {{if .POA }}"clique": {
            "period": 5,
            "epoch": 30000
        }{{ else }}"ethash": {}{{ end }}
